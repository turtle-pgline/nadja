[Unit]
Description=pprotein
Requires=network.target
After=syslog.target network.target

[Service]
Type=simple
EnvironmentFile=/etc/sysconfig/pprotein
ExecStart=/usr/local/bin/pprotein
PIDFile=/run/pprotein.pid
WorkingDirectory=/home/isucon/pprotein
User=isucon
Group=isucon

[Install]
WantedBy=multi-user.target
